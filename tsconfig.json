{
    "compilerOptions": {
      "rootDir": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  